{% extends "TisseoCoreBundle::datatable_list.html.twig" %}
{% set bundle = 'TisseoBoaBundle' %}

{% block list_title -%}
    {{ parent() }}
    {% if (is_granted('BUSINESS_MANAGE_CONFIGURATION')) %}
        -
        <a href="{{ path('tisseo_boa_agency_edit') }}" data-toggle="modal" data-target="#base-modal" class="btn btn-success">
            <span class="glyphicon glyphicon-plus"></span> {{ 'tisseo.boa.agency.action.create'|trans }}
        </a>
    {% endif %}
{% endblock %}

{% block table_head -%}
    <th class="col-sm-2">{{ 'tisseo.boa.agency.label.name'|trans }}</th>
    <th class="col-sm-3">{{ 'tisseo.boa.agency.label.url'|trans }}</th>
    <th class="col-sm-2">{{ 'tisseo.boa.agency.label.timezone'|trans }}</th>
    <th class="col-sm-1">{{ 'tisseo.boa.agency.label.lang'|trans }}</th>
    <th class="col-sm-2">{{ 'tisseo.boa.agency.label.phone'|trans }}</th>
    <th class="col-sm-2 no-sort no-search">{{ 'tisseo.global.actions'|trans }}</th>
{% endblock %}

{% block table_body -%}
    {% for agency in agencies %}
        <tr>
            <td>{{ agency.name }}</td>
            <td>{{ agency.url }}</td>
            <td>{{ agency.timezone }}</td>
            <td>{{ agency.lang }}</td>
            <td>{{ agency.phone }}</td>
            <td>
            {% if (is_granted('BUSINESS_MANAGE_CONFIGURATION')) %}
                <a class="btn btn-default" href="{{ path('tisseo_boa_agency_edit', { 'agencyId': agency.id }) }}" data-toggle="modal" data-target="#base-modal">
                    <span class="glyphicon glyphicon-edit"></span> {{ 'tisseo.global.edit'|trans }}
                </a>
            {% endif %}
            </td>
        </tr>
    {% endfor %}
{% endblock %}
