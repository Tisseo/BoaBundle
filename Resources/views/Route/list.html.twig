{% extends "TisseoBoaBundle::base.html.twig" %}

{% import "TisseoBoaBundle::macros.html.twig" as render %}


{% block container %}
    {% block stylesheets %}
        {{ parent() }}
        {% stylesheets 'bundles/tisseoboa/css/jquery.dataTables.min.css'
        filter='cssrewrite' output='css/datatables_tid.css' %}
        <link rel="stylesheet" href="{{ asset_url }}?{{ assets_version }}" />
        {% endstylesheets %}
    {% endblock %}
<div class="row">
    <div class="col-md-12" role="main">
        {% block main_content %}
<hr />
    <table class="table datatable table-hover dataTable no-footer" id="DataTables_Table_1" role="grid" aria-describedby="DataTables_Table_1_info">
        <tr>
            <thead>
                <th>Num ligne</th><th>Mode</th><th>Version_ligne</th><th>Date d√©but</th><th>Date fin</th>
            </thead>
            </tr>
        {% for line in linesV %}

            <tr role="row" class="{{ (loop.index%2==0) ? "odd" : "even" }}">
                <td id="{{ line.id }}">
                    {% if linesV[(loop.index-2)].line.number   != line.line.number  %}
                    {{ render.line_number(line, 'lineVersion', 'small') }}
                    {%  endif %}
                </td>
                <td> {{ line.line.physicalMode.name }}</td>
                <td> {{ line.version }}</td>
                <td> {{ line.startDate.date | date('d/m/Y') }}</td>
                <td> {{ line.plannedEndDate.date | date('d/m/Y') }}</td>

            </tr>
        {%  endfor %}

        {% endblock %}
         </table>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent }}

    {% javascripts '@TisseoBoaBundle/Resources/public/js/listlines.js' %}
                 <script src="{{ asset_url }}"></script>
    {% endjavascripts %}

{%  endblock %}