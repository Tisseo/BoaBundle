{% extends "TisseoBoaBundle::datatable_list.html.twig" %}
{% import "TisseoBoaBundle::macros.html.twig" as render %}

{% block list_title -%}
    {{ 'line.list.title'|trans({}, 'default') }}
{% endblock %}

{% block table_head -%}

    <th>{{'line.list.columns.number'|trans({}, 'default')}}</th>
    <th>{{'line.list.columns.mode'|trans({}, 'default')}}</th>
    <th>{{'line.list.columns.version'|trans({}, 'default')}}</th>
    <th>{{'line.list.columns.startDate'|trans({}, 'default')}}</th>
    <th>{{'line.list.columns.endDate'|trans({}, 'default')}}</th>
{% endblock %}

{% block table_body -%}
    {% if linesV|length == 0 %}
        <tr>
            <td colspan="5"> {{'global.no_items'|trans}} </td>
        </tr>
    {% else %}
        {% for line in linesV %}
            <tr role="row">
                    <td>
                        <a href="{{ path('tisseo_boa_route_list', {'LineVersionId': line.id}) }}">
                            {{ render.line_number(line, 'lineVersion', 'small') }}
                        </a>
                    </td>
                    <td>
                        <a href="{{ path('tisseo_boa_route_list', {'LineVersionId': line.id}) }}">{{ line.line.physicalMode.name }}</a>
                    </td>
                    <td>
                        <a href="{{ path('tisseo_boa_route_list', {'LineVersionId': line.id}) }}">{{ line.version }}</a>
                    </td>
                    <td>
                        <a href="{{ path('tisseo_boa_route_list', {'LineVersionId': line.id}) }}">{{ line.startDate.date | date('d/m/Y') }}</a>
                    </td>
                    <td>
                        <a href="{{ path('tisseo_boa_route_list', {'LineVersionId': line.id}) }}">{{ line.plannedEndDate.date | date('d/m/Y') }}</a>
                    </td>
            </tr>
        {% endfor %}
    {% endif %}
{% endblock %}


