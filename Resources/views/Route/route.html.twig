{% extends "TisseoBoaBundle::base.html.twig" %}
{% import "TisseoBoaBundle::macros.html.twig" as render %}
{% block container %}

    <div class="row">
        <div class="col-md-12" role="main">
            {% block main_content %}
            <hr />
            <table class="table datatable table-hover dataTable no-footer" id="DataTables_Table_1" role="grid" aria-describedby="DataTables_Table_1_info">
                <tr>
                    <thead>
                    <th>Nom route</th><th>Départ</th><th>Arrivée</th><th>Commentaire</th><th>Sens</th><th>Editer</th>
                    </thead>
                </tr>
                {% for route in routes %}

                    <tr role="row" class="{{ (loop.index%2==0) ? "odd" : "even" }}">
                        <td id="{{ route.id }}">
                           {{ route.name }}
                        </td>
                        {% set wayPointfirst = route.routeStops[0].waypoint  %}
                        {%  for stop in stops %}
                         {%  if stop.id == wayPointfirst.id  %}
                        <td>{{ dump(stop.stopArea.shortName) }} </td>
                        {% endif %}
                        {%  endfor %}
                        <td> {{ route.id }}</td>
                        <td> {{ route.comment }}</td>
                        <td> {{ route.way }}</td>
                        <td><button value="editer" class="btn btn-defaul">Editer</button></td>

                    </tr>

                {%  endfor %}

                {% endblock %}
            </table>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent }}

    {% javascripts '@TisseoBoaBundle/Resources/public/js/listlines.js' %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}

{%  endblock %}
