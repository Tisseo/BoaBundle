{% extends "::modal.html.twig" %}

{% form_theme form 'TisseoCoreBundle:Form:fields.html.twig' %}

{% block modal_title %}
    {{ title|trans({}, 'default') }}
{% endblock %}

{% block open_form %}
    {{ form_start(form) }}
{% endblock %}

{% block modal_body %}
    {{ form_errors(form) }}
    <div class="form form-edit">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(form.startDate) }}
                </div>
                <div class="col-md-6">
                    <div class="input-range">{{ form_row(form.endDate) }}</div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block modal_actions %}
    <button type="submit" class="btn btn-success">
        <span class="glyphicon glyphicon-pencil"></span> {{ 'global.save'|trans }}
    </button>
    {{ form_end(form) }}

    <script>
        require(['bootstrap/datepicker', 'bootstrap/datepicker/{{ app.request.locale }}'], function() {
            $('.input-range input').datepicker({
                language: '{{ app.request.locale }}',
                todayHighlight: true,
                autoclose: true
            });
        });
    </script>
{% endblock %}
