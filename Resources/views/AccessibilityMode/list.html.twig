{% extends "TisseoBoaBundle::datatable_list.html.twig" %}

{% import "TisseoBoaBundle::macros.html.twig" as render %}

{% block list_title -%}
    {{'accessibility_mode.list.title'|trans({}, 'default')}}
    {% if (is_granted('BUSINESS_MANAGE_CONFIGURATION')) %}
	-
	<a href="{{ path('tisseo_boa_accessibility_mode_edit') }}" data-toggle="modal" data-target="#base-modal" class="btn btn-success">
		<span class="glyphicon glyphicon-plus"></span> {{'accessibility_mode.create'|trans({}, 'default')}}
	</a>
    {% endif %}
{% endblock %}

{% block table_head -%}
    <th>{{'accessibility_mode.list.columns.name'|trans({}, 'default')}}</th>
    {% if (is_granted('BUSINESS_MANAGE_CONFIGURATION')) %}
        <th class="no-sort">{{'global.actions'|trans({}, 'messages')}}</th>
    {% endif %}
{% endblock %}

{% block table_body -%}
    {% if accessibility_modes|length == 0 %}
        {% set nbCol = is_granted('BUSINESS_MANAGE_CONFIGURATION') ? 2 : 1 %}
        <tr>
            <td colspan="{{ nbCol }}"> {{'global.no_items'|trans}} </td>
        </tr>
    {% else %}
        {% for accessibility_mode in accessibility_modes %}
            <tr>
                <td> {{ accessibility_mode.name }} </td>
                {% if (is_granted('BUSINESS_MANAGE_CONFIGURATION')) %}
                <td>
					<a class="btn btn-default" href="{{ path('tisseo_boa_accessibility_mode_edit', {'AccessibilityModeId': accessibility_mode.id}) }}" data-toggle="modal" data-target="#base-modal">
						<span class="glyphicon glyphicon-edit"></span> {{'global.edit'|trans({}, 'messages')}}
					</a>
                </td>
                {% endif %}
            </tr>
        {% endfor %}
    {% endif %}
{% endblock %}
